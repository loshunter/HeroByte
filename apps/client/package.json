{
  "name": "herobyte-client",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "lsof -ti:5173 2>/dev/null | xargs kill -9 2>/dev/null; exit 0",
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "pnpm --filter @shared build && tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@adapters-net": "workspace:*",
    "@shared": "workspace:*",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "konva": "^10.0.2",
    "process": "^0.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-konva": "^18.2.14",
    "simple-peer": "^9.11.1",
    "use-image": "^1.1.4",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/simple-peer": "^9.11.8",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "jsdom": "^24.1.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
