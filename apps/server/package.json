{
  "name": "vtt-server",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm --filter @shared build && tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:e2e": "NODE_ENV=production node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@shared": "workspace:*",
    "@types/node": "^24.6.1",
    "@types/ws": "^8.18.1",
    "hono": "^4.5.7",
    "typescript": "^5.5.4",
    "uuid": "^9.0.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/simple-peer": "^9.11.8",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.19.0",
    "vitest": "^3.2.4"
  }
}
